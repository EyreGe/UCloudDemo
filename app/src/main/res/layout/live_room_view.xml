<com.uclouddemo.publish.LiveRoomView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/liveroom"
    android:background="#ffffff">

    <com.uclouddemo.publish.LiveCameraView
        android:id="@+id/livecamera"
        android:background="@color/transparent"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--所有的按钮-->
    <include layout="@layout/live_camera_pannel_view" />

    <!--美颜-->
    <include layout="@layout/live_layout_live_room_filter_pannel" />

    <!--结束-->
    <include layout="@layout/live_layout_live_room_record_finish_pannel" />

</com.uclouddemo.publish.LiveRoomView>